section.content
	width 100%
	max-width 1024px
	margin 0 auto
	padding 0 16px 17px 11px
	
.content__left-menu
	width 100%
	max-width 197px
	position relative
	float left
	border 1px solid DimGrayColor2
	font-family lightFount
	font-size 14px
	
.content__left-menu--categories
	li.Categories
		padding 11px 21px 15px 24px
		font-family lightFount
		font-size 22px
		color DimGrayColor

.content__left-menu--all
	li::after
		display block
		position absolute
		content ""
		height 1px
		width 77%
		background DimGrayColor2
		left 12%
		z-index -1
		
.content__left-menu--all
	li:first-child::after
		display none
		
.content__left-menu--Fiction
	.last::after
		display none
		
.content__left-menu--all
	a
		display block
		padding 8px 21px 8px 24px
		transition:all .2s
		font-family mainFont
		color DimGrayColor
	
	& a:hover
		background: linear-gradient(to bottom, #93d675 0%,#92d574 10%,#8ccf6e 26%,#85c169 59%,#7db963 79%,#7bb261 100%)
		color #fff
		
.content__left-menu--Fiction
	li:first-child
		a
			font-family boldFount
			color grayLightColor
			
/* Контент правая сторона */
.content__tabs
	width 100%
	max-width 793px
	float right
	border-bottom 24px
	color mainTextColor
	font-family lightFount

.tabs
	position relative
	
.tabs li
	float left

.tabs li > input
	display none

label
	display inline-block
	border 1px solid DimGrayColor2
	border-right-width 0
	border-bottom-width 0
	padding 13px 22px 11px 26px
	background linear-gradient(to top, #e2e2e2,#f9f9f9)
	cursor pointer

.tabs li:last-child > label
	border-right-width 1px

.tab-content
	display none
	width 100%
	max-width 798px
	position absolute
	left 0
	padding 24px 17px 63px 24px
	border 1px solid DimGrayColor2

/* Функциональность: */

.tabs li > input:checked + label
	background #fff
	color DimGrayColor
	font-family boldFount
	font-size 14px

.tabs li > input:checked ~ .tab-content
	display block
	
.tab-content-container
	display inline-block
	width 126px
	height 234px
	margin-right 30px
	margin-bottom 20px
	padding 10px
	text-align center
	
	&:nth-child(5n+5)
		margin-right 0

.tab-content-movie
	width 107px
	height 160px
	background url(../img/content/movie-1.jpg) 0 0 no-repeat
	border 5px solid #000
	//box-shedow 
	
.description
	display inline-block
	margin-bottom 10px
	color mainTextColor
	font-family lightFount
	font-size 16px
		
.price-movie
	display inline-block
	color redColor
	font-family lightFount
	font-size 22px

.content__tabs-pagination
	position absolute
	bottom 22px
	right 39px
	
.pagination-list
	display inline-block
	
	li
		display inline-block
		padding 7px 7px 9px 7px
		
	a
		padding 7px 7px 9px 7px
	
	& a:hover
		border 1px solid #e0e0e0
		border-bottom 4px solid #81bd66
		padding 6px 6px 8px 6px